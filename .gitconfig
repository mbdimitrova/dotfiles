[core]
  editor = vim

[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  st = status
  ci = commit -v
  ps = push
  pl = pull
  df = diff
  a = add
  ck = checkout
  hide = update-index --assume-unchanged
  skip = update-index --skip-worktree

[help]
  autocorrect = 1

[branch]
  autosetupmerge = true
  autosetuprebase = always

[push]
  default = current

[rerere]
  enabled = 1

[merge]
  ff = only
